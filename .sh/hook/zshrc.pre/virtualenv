command -v virtualenv >/dev/null && {

    _vde_add_lprompt_virtualenv () {
        print -n '${VIRTUAL_ENV:+${BG_PR_BLUE}${PR_YELLOW} Ï¸ ${PR_WHITE}${VIRTUAL_ENV##*/}}'
    }
}
